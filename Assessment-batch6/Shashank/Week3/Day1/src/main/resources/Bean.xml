<?xml version="1.0"?>


<beans xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" 
xmlns:util="http://www.springframework.org/schema/util"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xmlns:context="http://www.springframework.org/schema/context"
 xmlns:context="http://www.springframework.org/schema/context/spring-context.xsd"
xmlns="http://www.springframework.org/schema/beans">
<context:component-scan base-package="com.example.demo"/>

<bean class="com.example.demo.Demo1" id="smalldemo1" scope="singleton"> 




<property value="Shashank" name="name"/>

<property value="Mumbai" name="address"/>

</bean>

<bean id="user_constructor" class="com.example.demo.Demo1" scope="singleton">
		
		<constructor-arg type="java.lang.String" value="Shashank"/>
		<constructor-arg type="java.lang.String" value="Delhi"/>
		
		
	</bean>
	
	
	












</beans>
